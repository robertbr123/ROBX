# Environment variables
API_HOST=localhost
API_PORT=8000
DEBUG=True

# Database
DATABASE_URL=sqlite:///./robx.db

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
YAHOO_FINANCE_ENABLED=True

# Redis (for caching and Celery)
