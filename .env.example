# Environment variables para ROBX Trading Bot
# Copie este arquivo para .env e ajuste as configurações

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Origins (adicione seu domínio se necessário)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
DATABASE_URL=sqlite:///./robx.db

# External APIs (opcional - deixe vazio para usar dados gratuitos)
ALPHA_VANTAGE_API_KEY=
YAHOO_FINANCE_ENABLED=True

# Redis (opcional - se disponível)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# Trading Settings
DEFAULT_TIMEFRAME=1m
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_PER_MINUTE=60

# Símbolos para monitoramento (separados por vírgula)
MONITORED_SYMBOLS=PETR4.SA,VALE3.SA,ITUB4.SA,BBDC4.SA,ABEV3.SA,MGLU3.SA,WEGE3.SA,RENT3.SA,LREN3.SA,JBSS3.SA

# Security
SECRET_KEY=robx-trading-bot-secret-key-2025
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/robx.log

# Technical Analysis Settings
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# Signal Generation
MIN_SIGNAL_STRENGTH=60
ENABLE_NOTIFICATIONS=True
SIGNAL_COOLDOWN_MINUTES=15

# Performance
CACHE_TIMEOUT_SECONDS=60
MAX_HISTORICAL_DAYS=90